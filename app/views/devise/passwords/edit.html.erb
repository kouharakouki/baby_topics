<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h4>パスワード再設定</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="from-group">
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "パスワード(６文字以上)", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-4">
        <div class="col-md-4">
          <%= f.submit 'パスワードを変更する', class: "form-control btn btn-orange" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
