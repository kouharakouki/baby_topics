<div class="row justify-content-center alert-text">
  <div class="col-auto mx-auto">
<% if resource.errors.any? %>
  <div id="error_explanation">
    <div>
      <%= resource.errors.count %>件のエラーが発生しました
    </div>
      <% resource.errors.full_messages.each do |message| %>
        <div>※<%= message %></div>
      <% end %>
  </div>
<% end %>
</div>
</div>
