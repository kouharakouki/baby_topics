<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h3>ログイン画面</h3>
    </div>
  </div>
  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="from-group">
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-md-4">
        <div class="col-auto mx-auto">
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :次回からログインをスキップする場合はチェックを入れてください %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-4">
          <%= f.submit 'ログイン', class: "form-control btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
