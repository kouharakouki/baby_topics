<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h3>新規アカウントを作成</h3>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <p class="alert-text">全項目入力必須です</p>
    </div>
  </div>
  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="from-group">
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号(ハイフン不要)", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(６文字以上)", class: "form-control" %>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
        </div>
      </div>

    <div class="row justify-content-center mt-4">
      <div class="col-md-4">
        <%= f.submit 'アカウント登録', class: "form-control btn btn-blue" %>
      </div>
    </div>
    </div>
  <% end %>
  <div class="row justify-content-center mt-4">
    <div class="col-auto mx-auto">
      アカウントをお持ちの方は<%= link_to "こちら", new_user_session_path %>からログイン
    </div>
  </div>
</div>