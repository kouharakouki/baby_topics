<div class="row justify-content-center alert-text">
  <div class="col-auto mx-auto">
    <% if user.errors.any? %>
      <div><%= user.errors.count %>件のエラーが発生しました</div>
      <% user.errors.full_messages.each do |message| %>
        <div>※<%= message %></div>
      <% end %>
    <% end %>
  </div>
</div>