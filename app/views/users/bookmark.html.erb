<div class="container-fluid">
  <div class="row">
    <div class="col-auto mx-auto">
      <h4>ブックマーク一覧画面</h4>
    </div>
  </div>

  <% if @posts.count == 0 %>
    <div class="row">
      <div class="col-auto mx-auto">
        <h5>投稿がありません</h5>
      </div>
    </div>
  <% else %>
    <%= render "posts/form_index", posts: @posts %>
  <% end %>

</div>
