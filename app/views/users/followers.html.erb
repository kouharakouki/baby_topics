<div class="container">
  <div class="row">
    <div class="col-auto mx-auto">
      <h3>フォロワー 一覧</h3>
    </div>
  </div>
  <div class="row">
    <% if @followers.count == 0 %>
      <table class="table">
        <th>ユーザーはいません</th>
      </table>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>ユーザーネーム</th>
            <th>投稿数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
          </tr>
        </thead>
        <tbody>
          <% @followers.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:'50x50', class: "rounded-circle" %>
              </td>
              <td>
                <%= link_to user_path(user.id) do %>
                  <%= user.user_name %>
                <% end %>
              </td>
              <td>
                <%= "投稿#{user.posts.count}件" %>
              </td>
              <td>
                <%= "フォロー#{user.followers.count}人" %>
              </td>
              <td>
                <%= "フォロワー#{user.followings.count}人" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
