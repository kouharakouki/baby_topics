<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h3>アカウント情報を変更する</h3>
    </div>
  </div>

  <%= render 'users/error', user: @user %>

  <%= form_with model: @user, url: user_path, local:true do |f| %>
    <div class="row justify-content-center mt-md-4">
      <div class="col-auto mx-auto">
        <%= attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size:'100x100', class: "rounded-circle" ) %>
      </div>
    </div>
    <div class="from-group">
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        プロフィール画像<%= f.attachment_field :profile_image %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        <%= f.text_area :introduction, rows:"8", autofocus: true, placeholder: "自己紹介", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-md-4">
        <%= f.text_field :email, autofocus: true, placeholder: "Eメール", class: "form-control" %>
      </div>
    </div>
    <div class="row justify-content-center mt-4">
      <div class="col-md-4">
        <%= f.submit '変更内容を保存する', class: "form-control btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row justify-content-center mt-md-3">
      <div class="col-auto mx-auto">
        <%= link_to '退会する', users_unsubscribe_path, class: 'btn btn-danger' %>
      </div>
    </div>
</div>