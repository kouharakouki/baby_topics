<% if post.bookmarked_by?(current_user) %>
  <p><%= link_to 'ブックマークから削除する', post_bookmarks_path(post), method: :delete, class: 'btn btn-info btn-block', remote: true %></p>
<% else %>
  <p><%= link_to 'ブックマークに保存する', post_bookmarks_path(post), method: :post, class: 'btn btn-success btn-block', remote: true %></p>
<% end %>