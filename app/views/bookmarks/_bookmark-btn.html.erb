<!--ブックマークの保存、削除を非同期で行うボタン-->
<% if post.bookmarked_by?(current_user) %>
  <p><%= link_to 'ブックマークする', post_bookmarks_path(post), method: :delete, class: 'form-control btn btn-orange', remote: true %></p>
<% else %>
  <p><%= link_to 'ブックマーク解除', post_bookmarks_path(post), method: :post, class: 'form-control btn btn-pink', remote: true %></p>
<% end %>