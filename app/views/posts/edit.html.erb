<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h3>投稿編集フォーム</h3>
    </div>
  </div>

  <!--エラー文のテンプレートを表示-->
  <%= render 'posts/error', post: @post %>

  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <p class="alert">※印は入力必須です</p>
    </div>
  </div>
  <%= form_with model: @post, local:true do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-4 mx-auto mb-2">
        <%= attachment_image_tag @post, :image, class:"product_show_image" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :genre, "※商品ジャンルを選択してください" %>
        <%= f.select :genre, Post.genres.keys, {},  {class: "form-control"} %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :product_name, "※商品名" %><br />
        <%= f.text_field :product_name, class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :image, "商品画像" %><br />
        <%= f.attachment_field :image %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :price, "※商品の価格帯を選択して下さい" %>
        <%= f.select :price, Post.prices.keys, {},  {class: "form-control"} %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :reason_for_selection, "※この商品を選んだ理由・使っている理由" %>
        <%= f.text_area :reason_for_selection, rows: 5, class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :good_point, "※メリット" %>
        <%= f.text_area :good_point, rows: 5, class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :bad_point, "※デメリット" %>
        <%= f.text_area :bad_point, rows: 5, class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :free_text, "補足があればご記入ください" %>
        <%= f.text_area :free_text, rows: 5, class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-4">
      <div class="col-md-4">
        <%= f.submit '変更内容を保存する', class: 'form-control btn btn-orange' %>
      </div>
    </div>
  <% end %>
  <div class="row justify-content-center mt-3">
    <div class="col-auto mx-auto">
      <%= link_to "詳細画面に戻る", post_path %>
    </div>
  </div>

  <!--区切り線を表示-->
  <hr>

  <div class="row justify-content-center mt-3">
    <div class="col-auto">
      <%= link_to "投稿を削除する", post_path(@post), method: :delete, class: 'form-control btn btn-danger'  %>
    </div>
  </div>
</div>