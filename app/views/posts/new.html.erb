<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h4>新規投稿フォーム</h4>
    </div>
  </div>

  <!--エラーメッセージの部分テンプレートを表示-->
  <%= render 'posts/error', post: @post %>

  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <p class="alert-text">※印は入力必須です</p>
    </div>
  </div>
  <%= form_with model: @post, local:true do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-5">
        <%= f.label :genre, "※商品ジャンルを選択してください" %>
        <%= f.select :genre, Post.genres.keys, {include_blank: '選択してください'}, {class: "form-control"} %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :product_name, "※商品名" %><br />
        <%= f.text_field :product_name ,class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :image, "※商品画像" %><br />
        <%= f.attachment_field :image %>
        <img class="image-item" style="width:50%;">
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :price, "※商品の価格帯を選択して下さい" %>
        <%= f.select :price, Post.prices.keys, {include_blank: '選択してください'},  {class: "form-control"} %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :reason_for_selection, "※商品を選んだ理由" %>
        <%= f.text_area :reason_for_selection, rows: 5 ,class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :good_point, "※商品のメリット" %>
        <%= f.text_area :good_point, rows: 5 ,class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :bad_point, "※商品のデメリット（なければ「なし」とご記入ください）" %>
        <%= f.text_area :bad_point, rows: 5 ,class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center mt-2">
      <div class="col-md-5">
        <%= f.label :free_text, "補足があればご記入ください" %>
        <%= f.text_area :free_text, rows: 5 ,class: "col-md-12" %>
      </div>
    </div>
    <div class="row justify-content-center my-3">
      <div class="col-md-3">
        <%= f.submit '投稿する', class: "form-control btn btn-orange" %>
      </div>
    </div>
  <% end %>
</div>