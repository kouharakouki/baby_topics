<div class="container">
  <div class="row justify-content-center">
    <div class="col-auto mx-auto">
      <h3>投稿詳細画面</h3>
    </div>
  </div>
  <div class="row mt-md-4">
    <div class="col-md-4">
      <div><%= attachment_image_tag @post, :image, size:'300x300' %></div>
      <div class="row justify-content-center mt-3">コメント数：<%= @post.post_comments.count %>件</div>
      <div class="row justify-content-center">○いいね</div>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <td>＜商品ジャンル＞<br />
          <%= @post.genre %></td>
        </tr>
        <tr>
          <td>＜商品名＞<br />
          <%= @post.product_name %></td>
        </tr>
        <tr>
          <td>＜価格帯＞<br />
          <%= @post.price %></td>
        </tr>
        <tr>
          <td>＜選んだ理由＞<br />
          <%= @post.reason_for_selection %></td>
        </tr>
        <tr>
          <td>＜メリット＞<br />
          <%= @post.good_point %></td>
        </tr>
        <tr>
          <td>＜メリット＞<br />
          <%= @post.bad_point %></td>
        </tr>
        <tr>
          <td>＜補足情報＞<br />
          <%= @post.free_text %></td>
        </tr>
      </table>
      <div class="row">
        <div class="col-auto">
          <% if @post.user == current_user %>
            <%= link_to "編集する", edit_post_path(@post), class: 'btn btn-success' %>
          <% end %>
        </div>
        <div class="col-auto">
          <% if @post.user == current_user %>
            <%= link_to "削除する", post_path(@post), method: :delete, class: 'btn btn-danger'  %>
          <% end %>
        </div>
      </div>
      <div class="row mt-3 mb-5">
        <div class="new-comment">
          <%= form_with(model:[@post, @post_comment],local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", size: "90x3", class: "form-control" %>
            <%= f.submit "コメントを投稿する", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
        <div class="comments_area">
          <% @post.post_comments.each do |post_comment| %>
          <div class="row mt-2">
            <div class="col-md-auto">
            <%= attachment_image_tag post_comment.user, :profile_image, fallback: "no_image.jpg", size:'50x50', class: "rounded-circle" %>
            </div>
            <div class="col-md-2">
            <%= post_comment.user.user_name %>
            </div>
            <div class="col-md-7">
            <%= post_comment.comment %>
            </div>
            <div class="col-md-1">
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            </div>
            <div class="col-md-1">
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
          <% end %>
        </div>
</div>
