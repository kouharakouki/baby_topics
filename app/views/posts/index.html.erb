<div class="container-fluid">


      <div class="row">
        <div class="col-auto mx-auto">
          <h4>投稿一覧画面</h4>
        </div>
      </div>

      <%= search_form_for @q do |f| %>
        <%= f.label :genre, "ジャンル検索" %>
        <%= f.select :genre_eq, Post.genres, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        <%= f.submit %>
      <% end %>

      <%= render "posts/form_index", posts: @posts %>


</div>
